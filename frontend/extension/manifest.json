{
  "manifest_version": 3,
  "name": "TiltGuard",
  "version": "1.0.0",
  "description": "Bloquea elementos espec√≠ficos en Tradovate.com",
  "permissions": [
    "scripting",
    "storage",
    "alarms",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://tradovate.com/*",
    "https://www.tradovate.com/*",
    "https://trader.tradovate.com/*",
    "https://worldtimeapi.org/*",
    "http://localhost:4000/*"
  ],
  "background": {
    "service_worker": "src/scripts/background.js"
  },
  "action": {
    "default_popup": "src/pages/popup.html",
    "default_title": "TiltGuard"
  },
  "content_scripts": [
    {
      "matches": [
        "https://tradovate.com/*",
        "https://www.tradovate.com/*",
        "https://trader.tradovate.com/*"
      ],
      "js": [
        "src/scripts/content.js"
      ],
      "run_at": "document_start"
    }
  ]
}